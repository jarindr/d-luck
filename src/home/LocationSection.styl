.col
  display: inline-block;
  vertical-align: top;
  padding-top: 30px
.container
  max-width: 1100px
  text-align: center;
  margin: 0 auto
  position relative
  h1
    font-size: 50px
  img.map
    max-width: 1100px
    width: 100%
    margin: 0 auto
    display: block;
    position relative
  img.beacon
    position absolute
    width 30px
    top 350px
    left 520px
    cursor pointer
    animation floating 3s infinite
    @keyframes floating
      0%
        transform scale(1)
      50%
        transform scale(1.5)
      100%
        transform scale(1)
  img.beacon:hover + img.googlemapdluck
    opacity 1
  img.googlemapdluck
    position absolute
    width 200px
    top 180px
    left 440px
    opacity 0
    transition 0.5s
