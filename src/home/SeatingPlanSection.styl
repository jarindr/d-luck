.container
  min-height: calc(100vh - 80px)
  background-color: black
.mapContainer
  display: inline-block;
  width: 50%;
  vertical-align: top
  background-color: white
  height: calc(100vh - 80px)
  position: relative;
  area
    cursor: pointer;
  img
    width: 90%
    position: absolute;
    top: 50%
    transform: translateY(-50%);
    left: 0
    right: 0
    margin: 0 auto
.seatContainer
  display: inline-block;
  width: 50%
  font-weight: 400
  cursor: pointer;
  font-size: 18px
  img
    vertical-align: middle;
    width: 25px
    margin: 10px
.contentContainer
  display: inline-block;
  width: 50%
  position: relative;
  height: calc(100vh - 80px)
  color: white
  .content
    transition: 0.3s
    position: absolute;
    left: 0
    right: 0
    margin 0 auto;
    top: 50%
    width: 500px
    transform: translateY(-55%);
    button
      margin-top: 40px
      padding: 15px 100px
      border: 2px solid #be9b42
      cursor: pointer;
      background-color: black
      font-family: Montserrat
      color: white
      &:hover
        background-color: #be9b42
    img
      vertical-align: middle;
      width: 25px
      margin-right: 10px
    h3
      font-size: 24px
      font-weight: 400
  h1
    color: white
    font-family: Montserrat
    font-size: 50px
  h2
    color: white
    font-weight: 400;
    font-size: 16px
    text-decoration: underline;
  p
    color: white
    line-height: 30px
    font-size: 16px
    span
      font-weight: 400
