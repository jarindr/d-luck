.container
  min-height: calc(100vh - 80px)
  background-color white
  text-align center
  .mobileHeader
    display none
    font-size 40px
.mapContainerPopUp
  display: inline-block;
  width: 50%;
  text-align center
  background white
  position relative
  z-index 100
  background-color white
  vertical-align middle
  display table-cell
  img
    width 100%
.mapContainer
  display: inline-block;
  width: 50%;
  vertical-align: top
  background-color: white
  height: 100vh
  position: relative;
  img
    width: 90%
    position: absolute;
    top: 50%
    transform: translateY(-50%);
    left: 0
    right: 0
    margin: 0 auto
.seatContainer
  display: inline-block;
  width: 50%
  font-weight: 400
  cursor: pointer;
  font-size: 14px
  img
    vertical-align: middle;
    width: 25px
    margin: 10px
.modal
  z-index 99999
  position fixed
  left 0
  right 0
  top 0
  background rgba(255, 255, 255, 0.1)!important
  bottom 0
.closeButton, .closeButtonResponsive
  width 30px
  cursor pointer
  position absolute
  right 20px
  top 20px
  z-index 200
.closeButtonResponsive
  display none
.modalMapContainer
  position absolute
  width 70%
  margin 0 auto
  display table
  align-items center
  z-index 1000
  top 50%
  left 0
  background-color white
  right 0
  transform translateY(-50%)
.contentContainer.popup
  height auto
  background black
  vertical-align middle
  display table-cell
  .content
    width auto
    max-width 700px
    position static
    transform translateY(0)!important
    padding 50px
.contentContainer
  background black
  text-align left;
  display: inline-block;
  width: 50%
  position: relative;
  background-color black;
  height: calc(100vh - 80px)
  color: white
  .content
    transition: 0.3s
    position: absolute;
    left: 0
    right: 0
    margin 0 auto;
    top: 50%
    width: 500px
    transform: translateY(-55%);
    button
      margin-top: 40px
      padding: 15px 100px
      border: 2px solid #be9b42
      cursor: pointer;
      background-color: black
      font-family: Montserrat
      color: white
      &:hover
        background-color: #be9b42
    img
      vertical-align: middle;
      width: 25px
      margin-right: 10px
    h1
      font-size 36px
      font-weight 700
    h3
      font-size: 28px
      font-weight: 400
      font-family kanit
    p
      font-family kanit
      font-weight 200
      font-size 14px
  h1
    color: white
    font-family: Montserrat
    font-size: 50px
  h2
    color: white
    font-weight: 400;
    font-size: 16px
    text-decoration: underline;
  p
    color: white
    line-height: 30px
    font-size: 16px
    span
      font-weight: 400
@media screen and (max-width 800px)
  .mapContainerPopUp
    width 100%
    display block!important
  .modalMapContainer
    top 0
    transform translateY(0)
    width 100%
  .modal
    overflow auto
  .closeButtonResponsive
    display block
  .closeButton
    display none
@media screen and (max-width 768px)
  .container
    .mobileHeader
      display block
      font-family: Montserrat
  .mapContainer
    display block
    width 100%
    height 100vw
  .contentContainer
    width 100%
    display block!important
    height 600px
    h1
      display none
    .content
      width auto
      padding 0 5%
    .content.default
      top 30%
@media screen and (max-width 450px)
  .contentContainer.popup
    .content
      padding-left 5%
      padding-right 5%
    .content
      button
        padding-left 50px
        padding-right 50px
