.container
  width calc(100% - 250px)
  margin 0 auto
.socialBlock
  position: relative
  height: 11vw
  flex 1 0 calc(100% / 6)
  cursor: pointer
.socialFeed
  display flex
  flex-wrap wrap
.socialBlock:hover > .socialCaption
  opacity: 1
.subscribeFormResponse
  position absolute
  margin 0 auto
  left 0
  right 0
  margin-top 5px
  font-weight 200
.socialCaption
  position: absolute;
  left: 0
  right: 0
  bottom: 0
  top: 0
  width: 100%
  height: 100%
  opacity: 0
  background-color: rgba(0, 0, 0, 0.8);
  color: black
  transition: 0.4s
  padding: 20px
  font-family: Montserrat
  p
    font-size: 14px
.footerBar
  color: #a8a8a8
  font-family: Montserrat;
  font-size: 12px
  background: #f0f0f0
  padding: 15px 120px
  input
    text-align: center;
    margin: 30px 0
    background: #f0f0f0
    border-top: none
    border-left: none
    border-right: none
    border-bottom: 2px solid rgba(255, 255, 255, 0.8);
    color: grey
    width: 100%
    max-width: 500px
    padding-bottom: 5px
    &:focus
      outline-color: transparent;
      outline-style: none;
    &::placeholder
      font-family: Montserrat
      font-size: 20px
      text-align: center;
      color: black
      opacity: 0.4
.siteMapContact
  color: black
  padding: 30px 0
  font-family: Montserrat
  ul
    padding: 0 10px
    padding-left: 0
    li
      list-style-type: none;
      font-size: 12px;
      opacity: 0.6
      padding: 2px 0
      padding-left: 0
      &.link
        cursor: pointer;
      &:first-child
        margin-bottom: 10px
        opacity: 1
        font-size: 18px
      &.link:hover
        opacity: 1
        a
          list-style-type: none;
          text-decoration: none
          color: inherit;
  .fax
    margin: 5px 0
    opacity: 1
    font-size: 18px
  .socialText
    opacity: 1
    font-size: 18px
    margin-top: 10px
  .siteMapBlock
    width: 33.33%
    display: inline-block;
    vertical-align: top
    margin-bottom: 20px
  .siteMap
    width: 50%
    display: inline-block;
    vertical-align: top
  .contact
    width: 50%
    display: inline-block;
    vertical-align: top
    .sendEmail
      background: #e2e2e2
      border none
      color: black
      display: table;
      padding: 7px 10px
      margin-top: 10px
      font-family: Montserrat
      cursor: pointer;
      font-size: 8px
    .contactFrom
      margin-top: 32px
      input
        display: inline-block;
        width calc(50% - 5px)
        max-width 200px
        padding: 5px
        background: #e2e2e2
        border: 0
        box-sizing border-box
        margin 5px 5px 5px 0
        &::placeholder
          font-family: Montserrat
          font-size: 12px
      textarea
        display: block
        background: #e2e2e2
        resize: none
        padding: 5px
        box-sizing border-box
        width: 100%
        max-width 405px
        height: 70px
        border: 0
        &::placeholder
          font-family: Montserrat
          font-size: 12px
.social
  margin-top: 25px
  opacity: 1!important
  img
    height: 25px
    margin-right: 22px
    filter brightness(40%)
@media screen and (max-width:1000px)
  .footerBar
    padding-left 5%
    padding-right 5%
  .container
    width 100%
  .siteMapContact
    padding: 30px 5%
    .siteMap
      width: 100%
    .contact
      width: 100%
      .contactFrom
        input
          width: 100%
          box-sizing border-box
          max-width none
        textarea
          width: 100%
          margin 5px 0
          box-sizing border-box
        button
          margin 5px 0
  .socialCaption
    display none
@media screen and (max-width:450px)
  .hideMobile
    display none
  .container
    width 100%
    .socialFeed
      .socialBlock
        flex 1 1 25%
        height 20vw
  .siteMapContact
    .siteMap
      display: none
    .siteMapBlock
      width: 100%!important
